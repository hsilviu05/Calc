<UserControl x:Class="Calc.Views.StandardCalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Calc.Views"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="320"
             Background="#F0F0F0">
        <UserControl.Resources>
                <Style x:Key="DisplayTextBlockStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="36"/>
                        <Setter Property="FontFamily"
                                Value="Segoe UI Light"/>
                        <Setter Property="TextAlignment"
                                Value="Right"/>
                        <Setter Property="Margin"
                                Value="10,5"/>
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="Foreground"
                                Value="#1E1E1E"/>
                </Style>

                <Style x:Key="BaseButtonStyle"
                       TargetType="Button">
                        <Setter Property="Margin"
                                Value="2"/>
                        <Setter Property="FontFamily"
                                Value="Segoe UI"/>
                        <Setter Property="FontSize"
                                Value="16"/>
                        <Setter Property="Background"
                                Value="#FFFFFF"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Height"
                                Value="45"/>
                        <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                        <Setter Property="Background"
                                                Value="#E6E6E6"/>
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                        <Setter Property="Background"
                                                Value="#CCCCCC"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>

                <Style x:Key="MemoryButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background"
                                Value="#F8F8F8"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Height"
                                Value="40"/>
                </Style>

                <Style x:Key="OperationButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background"
                                Value="#F8F8F8"/>
                </Style>

                <Style x:Key="DigitButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background"
                                Value="#FFFFFF"/>
                        <Setter Property="FontSize"
                                Value="18"/>
                </Style>

                <Style x:Key="EqualsButtonStyle"
                       TargetType="Button"
                       BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background"
                                Value="#1976D2"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                        <Setter Property="Background"
                                                Value="#1565C0"/>
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                        <Setter Property="Background"
                                                Value="#0D47A1"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>
        </UserControl.Resources>

        <Grid Margin="8">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Display Area -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="4"
                        Margin="0,0,0,8"
                        Effect="{DynamicResource MaterialDesignElevationShadow2}">
                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="{Binding Display}"
                                           Style="{StaticResource DisplayTextBlockStyle}"/>
                        </Grid>
                </Border>

                <!-- Buttons Area -->
                <Grid Grid.Row="1"
                      Margin="0,4">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Memory Row -->
                        <UniformGrid Grid.Row="0"
                                     Grid.ColumnSpan="4"
                                     Rows="1">
                                <Button Content="MC"
                                        Command="{Binding MemoryClearCommand}"
                                        Style="{StaticResource MemoryButtonStyle}"/>
                                <Button Content="MR"
                                        Command="{Binding MemoryRecallCommand}"
                                        Style="{StaticResource MemoryButtonStyle}"/>
                                <Button Content="M+"
                                        Command="{Binding MemoryAddCommand}"
                                        Style="{StaticResource MemoryButtonStyle}"/>
                                <Button Content="M-"
                                        Command="{Binding MemorySubtractCommand}"
                                        Style="{StaticResource MemoryButtonStyle}"/>
                                <Button Content="MS"
                                        Command="{Binding MemoryStoreCommand}"
                                        Style="{StaticResource MemoryButtonStyle}"/>
                                <Button Content="M▾"
                                        Command="{Binding ShowMemoryListCommand}"
                                        Style="{StaticResource MemoryButtonStyle}"/>
                        </UniformGrid>

                        <!-- Special Operations Row -->
                        <Button Grid.Row="1"
                                Grid.Column="0"
                                Content="%"
                                Command="{Binding PercentageCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                Content="√"
                                Command="{Binding SquareRootCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="1"
                                Grid.Column="2"
                                Content="x²"
                                Command="{Binding SquareCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="1"
                                Grid.Column="3"
                                Content="1/x"
                                Command="{Binding ReciprocalCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>

                        <!-- Clear and Basic Operations -->
                        <Button Grid.Row="2"
                                Grid.Column="0"
                                Content="CE"
                                Command="{Binding ClearEntryCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="2"
                                Grid.Column="1"
                                Content="C"
                                Command="{Binding ClearCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="2"
                                Grid.Column="2"
                                Content="⌫"
                                Command="{Binding BackspaceCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="2"
                                Grid.Column="3"
                                Content="÷"
                                Command="{Binding OperationCommand}"
                                CommandParameter="/"
                                Style="{StaticResource OperationButtonStyle}"/>

                        <!-- Numbers and Operations -->
                        <Button Grid.Row="3"
                                Grid.Column="0"
                                Content="7"
                                Command="{Binding DigitCommand}"
                                CommandParameter="7"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="3"
                                Grid.Column="1"
                                Content="8"
                                Command="{Binding DigitCommand}"
                                CommandParameter="8"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="3"
                                Grid.Column="2"
                                Content="9"
                                Command="{Binding DigitCommand}"
                                CommandParameter="9"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="3"
                                Grid.Column="3"
                                Content="×"
                                Command="{Binding OperationCommand}"
                                CommandParameter="*"
                                Style="{StaticResource OperationButtonStyle}"/>

                        <Button Grid.Row="4"
                                Grid.Column="0"
                                Content="4"
                                Command="{Binding DigitCommand}"
                                CommandParameter="4"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="4"
                                Grid.Column="1"
                                Content="5"
                                Command="{Binding DigitCommand}"
                                CommandParameter="5"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="4"
                                Grid.Column="2"
                                Content="6"
                                Command="{Binding DigitCommand}"
                                CommandParameter="6"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="4"
                                Grid.Column="3"
                                Content="-"
                                Command="{Binding OperationCommand}"
                                CommandParameter="-"
                                Style="{StaticResource OperationButtonStyle}"/>

                        <Button Grid.Row="5"
                                Grid.Column="0"
                                Content="1"
                                Command="{Binding DigitCommand}"
                                CommandParameter="1"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="5"
                                Grid.Column="1"
                                Content="2"
                                Command="{Binding DigitCommand}"
                                CommandParameter="2"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="5"
                                Grid.Column="2"
                                Content="3"
                                Command="{Binding DigitCommand}"
                                CommandParameter="3"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="5"
                                Grid.Column="3"
                                Content="+"
                                Command="{Binding OperationCommand}"
                                CommandParameter="+"
                                Style="{StaticResource OperationButtonStyle}"/>

                        <Button Grid.Row="6"
                                Grid.Column="0"
                                Content="±"
                                Command="{Binding NegateCommand}"
                                Style="{StaticResource OperationButtonStyle}"/>
                        <Button Grid.Row="6"
                                Grid.Column="1"
                                Content="0"
                                Command="{Binding DigitCommand}"
                                CommandParameter="0"
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="6"
                                Grid.Column="2"
                                Content="."
                                Command="{Binding DigitCommand}"
                                CommandParameter="."
                                Style="{StaticResource DigitButtonStyle}"/>
                        <Button Grid.Row="6"
                                Grid.Column="3"
                                Content="="
                                Command="{Binding EqualsCommand}"
                                Style="{StaticResource EqualsButtonStyle}"/>
                </Grid>
        </Grid>
</UserControl>
